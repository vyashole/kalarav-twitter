<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="5dp">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imgUserImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/user_photo"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgUserImage"
        android:layout_toEndOf="@+id/imgUserImage"
        android:layout_margin="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtUpdateTime"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/txtUserName"
        android:layout_alignLeft="@+id/txtUserName"
        android:layout_alignStart="@+id/txtUserName"
        android:layout_alignRight="@+id/txtUpdateTime"
        android:layout_alignEnd="@+id/txtUpdateTime" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reply"
        android:id="@+id/btnReply"
        android:layout_below="@+id/updateText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retweet"
        android:id="@+id/btnRetweet"
        android:layout_alignTop="@+id/btnReply"
        android:layout_toLeftOf="@+id/btnReply"
        android:layout_toStartOf="@+id/btnReply" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:id="@+id/btnLike"
        android:layout_alignTop="@+id/btnRetweet"
        android:layout_toLeftOf="@+id/btnRetweet"
        android:layout_toStartOf="@+id/btnRetweet" />


</RelativeLayout>